// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "watch",
            "dependsOn": [
                "napi: build",
                "npm: watch:tsc",
                "npm: watch:esbuild",
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOrder": "parallel"
        },
        {
            "type": "npm",
            "script": "watch:esbuild",
            "group": "build",
            "isBackground": true,
            "label": "npm: watch:esbuild",
            "path": "/packages/extension",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            },
        },
        {
            "type": "npm",
            "script": "watch:tsc",
            "group": "build",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "label": "npm: watch:tsc",
            "path": "/packages/extension",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        },
        {
            "label": "napi: build",
            "type": "shell",
            "command": "napi",
            "args": [
                "build",
                "--platform",
                "--cwd",
                "${workspaceFolder}/packages/debugger"
            ],
            "isBackground": true,
            "group": "build",
            "presentation": {
                "group": "watch",
                "reveal": "never"
            }
        }
    ]
}